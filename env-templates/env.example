# =====================================================
# Clario AI Meetings Platform - Environment Configuration
# Copy this file to .env and fill in your actual values
# =====================================================

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

PROJECT_NAME="Clario AI Meetings Platform"
VERSION="0.1.0"
ENVIRONMENT="development"
DEBUG=true

SECRET_KEY="your-super-secret-key-change-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=10080
REFRESH_TOKEN_EXPIRE_DAYS=30

ALLOWED_HOSTS="localhost,127.0.0.1,0.0.0.0"
BACKEND_CORS_ORIGINS="http://localhost:3000,http://localhost:8080,http://localhost:4200"

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL (Primary Database)
DATABASE_URL="postgresql://clario_user:clario_password@localhost:5432/clario"
ASYNC_DATABASE_URL="postgresql+asyncpg://clario_user:clario_password@localhost:5432/clario"

# Redis (Caching & Sessions)
REDIS_URL="redis://localhost:6379"
CELERY_BROKER_URL="redis://localhost:6379/0"
CELERY_RESULT_BACKEND="redis://localhost:6379/0"

# =============================================================================
# VECTOR DATABASE (WEAVIATE) - REQUIRED ⭐
# =============================================================================

WEAVIATE_URL="http://localhost:8080"
WEAVIATE_API_KEY=""
WEAVIATE_TIMEOUT=60
WEAVIATE_BATCH_SIZE=100

# For Weaviate Cloud Service (Production):
# WEAVIATE_URL="https://your-cluster.weaviate.network"
# WEAVIATE_API_KEY="your-weaviate-cloud-api-key"

# =============================================================================
# GRAPH DATABASE (NEO4J) - REQUIRED ⭐
# =============================================================================

NEO4J_URI="bolt://localhost:7687"
NEO4J_USER="neo4j"
NEO4J_PASSWORD="clario_password"
NEO4J_TIMEOUT=30
NEO4J_ENCRYPTED=false

# For Neo4j AuraDB (Production):
# NEO4J_URI="neo4j+s://your-instance.databases.neo4j.io"
# NEO4J_PASSWORD="your-secure-neo4j-password"
# NEO4J_ENCRYPTED=true

# =============================================================================
# FRIENDLIAI (AI INFERENCE) - REQUIRED ⭐
# =============================================================================

FRIENDLIAI_TOKEN="your-friendliai-token-here"
FRIENDLIAI_BASE_URL="https://api.friendli.ai/v1"
FRIENDLIAI_MODEL="meta-llama-3.1-70b-instruct"

# OpenAI-compatible Friendli Serverless (aliases)
FRIENDLI_TOKEN="your-friendliai-token-here"
FRIENDLI_BASE_URL="https://api.friendli.ai/serverless/v1"
FRIENDLIAI_TEMPERATURE=0.7
FRIENDLIAI_MAX_TOKENS=2000
FRIENDLIAI_TOP_P=0.9
FRIENDLIAI_TIMEOUT=120

# =============================================================================
# AWS STRANDS AGENT SDK - REQUIRED ⭐
# =============================================================================

STRANDS_API_KEY="your-strands-api-key-here"
STRANDS_BASE_URL="https://api.strands.ai/v1"

# AWS Configuration for Bedrock
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
AWS_DEFAULT_REGION="us-east-1"

# Strands Model Configuration
STRANDS_MODEL_ID="anthropic.claude-3-sonnet-20240229-v1:0"
STRANDS_TEMPERATURE=0.7
STRANDS_MAX_TOKENS=2000
STRANDS_TOP_P=0.9

# Agent Configuration
STRANDS_CONVERSATION_WINDOW=10
STRANDS_DEFAULT_PERSONALITY="analytical"
STRANDS_DEFAULT_ROLE="advisor"
STRANDS_DISCUSSION_ROUNDS=3
STRANDS_MAX_AGENTS_PER_MEETING=10
STRANDS_RESPONSE_TIMEOUT=30
STRANDS_MOCK_MODE=false
STRANDS_DEBUG_LOGGING=true

# =============================================================================
# VAPI (VOICE AI) - REQUIRED ⭐
# =============================================================================

VAPI_API_KEY="your-vapi-api-key-here"
VAPI_BASE_URL="https://api.vapi.ai/v1"

# Voice Settings
VAPI_DEFAULT_VOICE="nova"
VAPI_VOICE_SPEED=1.0
VAPI_VOICE_PITCH=0.0
VAPI_MAX_CALL_DURATION=1800

# Assistant Configuration
VAPI_SYSTEM_MESSAGE="You are Clario's AI assistant helping users discuss meeting decisions."
VAPI_FIRST_MESSAGE="Hello! I'm here to help you discuss the meeting decisions. What would you like to know?"
VAPI_SILENCE_TIMEOUT=30
VAPI_MAX_DURATION=900

# Webhook Configuration
VAPI_WEBHOOK_URL="http://localhost:8000/api/v1/vapi/webhook"
VAPI_WEBHOOK_SECRET="your-webhook-secret"

# =============================================================================
# OPENAI (BACKUP/EMBEDDINGS) - OPTIONAL
# =============================================================================

OPENAI_API_KEY="your-openai-api-key-here"
OPENAI_MODEL="gpt-4"
OPENAI_EMBEDDING_MODEL="text-embedding-ada-002"
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000
OPENAI_TIMEOUT=60

# =============================================================================
# FILE STORAGE
# =============================================================================

# MinIO (Local Development)
MINIO_ENDPOINT="localhost:9000"
MINIO_ACCESS_KEY="clario_admin"
MINIO_SECRET_KEY="clario_password"
MINIO_BUCKET_NAME="clario-files"
MINIO_SECURE=false

# AWS S3 (Production Alternative)
# AWS_S3_BUCKET="your-s3-bucket-name"
# AWS_S3_REGION="us-east-1"

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST="smtp.gmail.com"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-email-password"
EMAILS_FROM_EMAIL="noreply@clario.ai"
EMAILS_FROM_NAME="Clario"

# =============================================================================
# FEATURE FLAGS
# =============================================================================

ENABLE_AGENT_DISCUSSIONS=true
ENABLE_VOICE_INTERACTIONS=true
ENABLE_ANALYTICS=true
ENABLE_AUTO_DECISIONS=false
MOCK_EXTERNAL_SERVICES=false

# =============================================================================
# PERFORMANCE & SECURITY
# =============================================================================

RATE_LIMIT_PER_MINUTE=60
MAX_TEAM_SIZE=100
MAX_MEETINGS_PER_ORG=1000
MAX_FILE_SIZE_MB=50

# =============================================================================
# LOGGING & MONITORING
# =============================================================================

LOG_LEVEL="INFO"
LOG_FORMAT="json"
ENABLE_METRICS=true
METRICS_PORT=8001

# OpenTelemetry
OTEL_SERVICE_NAME="clario-api"
OTEL_SERVICE_VERSION="1.0.0"
OTEL_EXPORTER_OTLP_ENDPOINT="http://localhost:4317"

# =============================================================================
# DOCKER COMPOSE VARIABLES
# =============================================================================

POSTGRES_DB=clario
POSTGRES_USER=clario_user
POSTGRES_PASSWORD=clario_password
NEO4J_AUTH=neo4j/clario_password
MINIO_ROOT_USER=clario_admin
MINIO_ROOT_PASSWORD=clario_password

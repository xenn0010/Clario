# =====================================================
# Clario AI Meetings Platform - PRODUCTION Configuration
# =====================================================

PROJECT_NAME="Clario AI Meetings Platform"
VERSION="0.1.0"
ENVIRONMENT="production"
DEBUG=false

# SECURITY - CHANGE ALL THESE VALUES
SECRET_KEY="your-super-secure-production-secret-key"
JWT_SECRET="your-production-jwt-secret"
ENCRYPTION_KEY="your-production-encryption-key"

# Production domains
ALLOWED_HOSTS="yourdomain.com,api.yourdomain.com"
BACKEND_CORS_ORIGINS="https://yourdomain.com,https://app.yourdomain.com"

# =============================================================================
# PRODUCTION DATABASES
# =============================================================================

# PostgreSQL (Production - AWS RDS, Google Cloud SQL, etc.)
DATABASE_URL="postgresql://clario_prod:secure_password@your-db-host:5432/clario_production"
ASYNC_DATABASE_URL="postgresql+asyncpg://clario_prod:secure_password@your-db-host:5432/clario_production"

# Redis (Production - AWS ElastiCache, etc.)
REDIS_URL="redis://your-redis-host:6379"

# Weaviate Cloud Service (Production)
WEAVIATE_URL="https://your-cluster.weaviate.network"
WEAVIATE_API_KEY="your-production-weaviate-api-key"

# Neo4j AuraDB (Production)
NEO4J_URI="neo4j+s://your-instance.databases.neo4j.io"
NEO4J_USER="neo4j"
NEO4J_PASSWORD="your-secure-neo4j-password"
NEO4J_ENCRYPTED=true

# =============================================================================
# PRODUCTION AI SERVICES
# =============================================================================

# FriendliAI (Production)
FRIENDLIAI_TOKEN="your-production-friendliai-token"
FRIENDLIAI_MODEL="meta-llama-3.1-70b-instruct"

# AWS Strands (Production)
STRANDS_API_KEY="your-production-strands-api-key"
AWS_ACCESS_KEY_ID="your-production-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-production-aws-secret-key"
STRANDS_MODEL_ID="anthropic.claude-3-sonnet-20240229-v1:0"
STRANDS_TEMPERATURE=0.6
STRANDS_DISCUSSION_ROUNDS=3
STRANDS_MOCK_MODE=false

# VAPI (Production)
VAPI_API_KEY="your-production-vapi-api-key"
VAPI_WEBHOOK_URL="https://yourdomain.com/api/v1/vapi/webhook"
VAPI_WEBHOOK_SECRET="your-production-webhook-secret"

# OpenAI (Production Backup)
OPENAI_API_KEY="your-production-openai-api-key"

# =============================================================================
# PRODUCTION FILE STORAGE
# =============================================================================

# AWS S3 (Production)
AWS_S3_BUCKET="clario-production-files"
AWS_S3_REGION="us-east-1"

# =============================================================================
# PRODUCTION EMAIL
# =============================================================================

# SendGrid (Production)
SMTP_HOST="smtp.sendgrid.net"
SMTP_PORT=587
SMTP_USER="apikey"
SMTP_PASSWORD="your-sendgrid-api-key"
EMAILS_FROM_EMAIL="noreply@yourdomain.com"
EMAILS_FROM_NAME="Clario"

# =============================================================================
# PRODUCTION PERFORMANCE & SECURITY
# =============================================================================

# Stricter limits for production
RATE_LIMIT_PER_MINUTE=30
MAX_TEAM_SIZE=500
MAX_MEETINGS_PER_ORG=10000
MAX_FILE_SIZE_MB=100

# Production features
ENABLE_AGENT_DISCUSSIONS=true
ENABLE_VOICE_INTERACTIONS=true
ENABLE_ANALYTICS=true
ENABLE_AUTO_DECISIONS=true
MOCK_EXTERNAL_SERVICES=false

# Production logging
LOG_LEVEL="WARNING"
LOG_FORMAT="json"
ENABLE_METRICS=true

# OpenTelemetry (Production)
OTEL_SERVICE_NAME="clario-production"
OTEL_EXPORTER_OTLP_ENDPOINT="https://your-observability-endpoint.com"

# Error tracking
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# =============================================================================
# PRODUCTION INTEGRATIONS (Optional)
# =============================================================================

# Slack Integration
SLACK_BOT_TOKEN="xoxb-your-production-slack-bot-token"
SLACK_SIGNING_SECRET="your-production-slack-signing-secret"

# Microsoft Teams
TEAMS_APP_ID="your-production-teams-app-id"
TEAMS_APP_PASSWORD="your-production-teams-app-password"

# Zoom Integration
ZOOM_API_KEY="your-production-zoom-api-key"
ZOOM_API_SECRET="your-production-zoom-api-secret"
